{
    "compilerOptions": {
        "outDir": "dist",
        "rootDirs": ["src/"],

        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "types": ["heft-jest", "node"],
        "module": "CommonJS",
        "target": "es2015",
        "lib": ["esnext"],
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
